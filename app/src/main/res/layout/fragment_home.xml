<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/workoutButton"
        android:layout_width="128dp"
        android:layout_height="108dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_rew" />

    <ImageButton
        android:id="@+id/alarmButton"
        android:layout_width="129dp"
        android:layout_height="108dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="140dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <TextView
        android:id="@+id/woText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gotoWorkoutButton"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/workoutButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="95dp" />

    <TextView
        android:id="@+id/alText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gotoAlarmButton"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/alarmButton"
        android:layout_marginRight="105dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>